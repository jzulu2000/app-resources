[
  {
    "name": "RaaLyrics",
    "url-pattern": "http://www.rentanadviser.com/en/subtitles/subtitles4songs.aspx?src=artistname%20songtitle",
    "url-replacements": [
      {
        "song-field" : "artist",
        "text": "artistname",
        "transformers": [
          {
            "type": "encode"
          }
        ]
      },
      {
        "song-field" : "title",
        "text": "songtitle",
        "transformers": [
          {
            "type": "encode"
          }
        ]
      }
    ],
    "query-extractor-pattern" : "<a target=\"_blank\" href=\"([^\"]*)\">",
    "result-pattern": ".*",
    "result-transformers": [
      {
        "type": "replace",
        "original": "\\p{C}",
        "replace":"\n"
      },
      {
        "type": "remove",
        "regex": "([Bb]y [Rr]ent[Aa]n[Aa]dviser.com)"
      }
    ]
  },
  {
    "name": "lyricsmode",
    "url-pattern": "http://www.lyricsmode.com/lyrics/subartist/artist/title.html",
    "url-replacements": [
      {
        "song-field" : "artist",
        "text": "subartist",
        "transformers": [
          {
            "type": "lower"
          },
          {
            "type": "substring",
            "from": "0",
            "to":"1"
          }
        ]
      },
      {
        "song-field" : "artist",
        "text": "artist",
        "transformers": [
          {
            "type": "lower"
          },
          {
            "type": "replace",
            "original": "[\\s\"-]",
            "replace":"_"
          },
          {
            "type": "replace",
            "original": "'",
            "replace":""
          },
          {
            "type": "replace",
            "original": "& ",
            "replace":""
          },
          {
            "type": "replace",
            "original": "[^A-Za-z0-9]",
            "replace":"_"
          },
          {
            "type": "replace",
            "original": "^the ",
            "replace":""
          }
        ]
      },
      {
        "song-field" : "title",
        "text": "title",
        "transformers": [
          {
            "type": "lower"
          },
          {
            "type": "replace",
            "original": "[\\s\"-]",
            "replace":"_"
          },
          {
            "type": "replace",
            "original": "'",
            "replace":""
          },
          {
            "type": "replace",
            "original": "& ",
            "replace":""
          },
          {
            "type": "replace",
            "original": "[^A-Za-z0-9]",
            "replace":"_"
          }
        ]
      }
    ],
    "result-pattern": "<p id=\"lyrics_text\" class=\"ui-annotatable\">(.*)<p id=\"lyrics_text_selected\">",
    "result-transformers": [
      {
        "type": "replace",
        "original": "\\[[^\\[]*\\]",
        "replace":""
      },
      {
        "type": "html-to-text"
      }
    ]
  },

  {
    "name": "musixmatch",
    "url-pattern": "https://www.musixmatch.com/lyrics/artist/title",
    "url-replacements": [
      {
        "song-field" : "artist",
        "text": "artist",
        "transformers": [
          {
            "type": "upper"
          },
          {
            "type": "replace",
            "original": "[\\s'\"-]",
            "replace":"-"
          },
          {
            "type": "replace",
            "original": "&",
            "replace":"and"
          },
          {
            "type": "replace",
            "original": "[^A-Za-z0-9]",
            "replace":"-"
          }
        ]
      },
      {
        "song-field" : "title",
        "text": "title",
        "transformers": [
          {
            "type": "replace",
            "original": "[\\s'\"-]",
            "replace":"-"
          },
          {
            "type": "replace",
            "original": "&",
            "replace":"and"
          },
          {
            "type": "replace",
            "original": "[^A-Za-z0-9]",
            "replace":"-"
          }
        ]
      }
    ],
    "result-pattern": "</div><span><p class=\"mxm-lyrics__content \">(.*)</p></div></span>",
    "result-transformers": [
      {
        "type": "replace",
        "original": "\\[[^\\[]*\\]",
        "replace":""
      },
      {
        "type": "remove",
        "regex" : "(</p><div>.*</div><p class=\"mxm-lyrics__content \">)"
      }
    ]
  },

